        <p>Will you be my Valentine?</p>
        <div class="buttons">
            <button class="yes-btn" onclick="sayYes()">YES ‚ù§Ô∏è</button>
            <button class="no-btn" onclick="sayNo()">NO üòè</button>
        </div>
        <div id="noMessages" style="margin-top: 20px; font-size: 1.1em;"></div>
        <div class="final-message" id="finalMessage">
            <h2>Congratulations.</h2>
            <p>You‚Äôre officially my Valentine ‚ù§Ô∏è</p>
            <p>Distance or not.<br>Loud or quiet.<br>It‚Äôs always you.</p>
            <p class="footer">Made with too much love and slightly questionable coding.</p>
        </div>
    </section>

    <script>
        let currentLine = 1;
        let currentQuestion = 1;
        let noClicks = 0;

        function nextSection(sectionId) {
            document.querySelectorAll('.section').forEach(sec => sec.classList.remove('visible'));
            document.getElementById(sectionId).classList.add('visible');
            if (sectionId === 'distance') {
                setTimeout(() => document.getElementById('toQuestion').style.display = 'block', 3000);
            }
        }

        function nextLine() {
            if (currentLine < 3) {
                document.getElementById('line' + currentLine).classList.remove('visible');
                currentLine++;
                document.getElementById('line' + currentLine).classList.add('visible');
            } else {
                document.querySelector('.caption').style.display = 'none';
                document.getElementById('nextBefore').style.display = 'block';
            }
        }

        function answer(response, qId) {
            const reaction = document.getElementById('reaction' + qId.slice(-1));
            if (response === 'yes') {
                reaction.textContent = 'Liar.';
                reaction.style.display = 'block';
            } else {
                reaction.textContent = 'Good. üòä';
                reaction.style.display = 'block';
                setTimeout(() => {
                    if (currentQuestion < 3) {
                        document.getElementById('q' + currentQuestion).style.display = 'none';
                        currentQuestion++;
                        document.getElementById('q' + currentQuestion).style.display = 'block';
                    } else {
                        document.getElementById('toDistance').style.display = 'block';
                    }
                }, 1000);
            }
        }

        function sayNo() {
            noClicks++;
            const noBtn = document.querySelector('.no-btn');
            const yesBtn = document.querySelector('.yes-btn');
            const messages = ['Nice try.', 'You‚Äôre embarrassing yourself.', 'We both know the answer.'];
            document.getElementById('noMessages').textContent = messages[Math.min(noClicks - 1, messages.length - 1)];
            noBtn.style.transform = `scale(${1 - noClicks * 0.2}) translateX(${noClicks * 20}px)`;
            yesBtn.style.transform = `scale(${1 + noClicks * 0.2})`;
            if (noClicks >= 3) {
                noBtn.style.display = 'none';
            }
        }

        function sayYes() {
            document.querySelector('.buttons').style.display = 'none';
            document.getElementById('noMessages').style.display = 'none';
            document.getElementById('finalMessage').style.display = 'block';
            startConfetti();
        }

        function startConfetti() {
            const confettiContainer = document.getElementById('confetti');
            confettiContainer.style.display = 'block';
            for (let i = 0; i < 100; i++) {
                const piece = document.createElement('div');
                piece.className = 'confetti-piece';
                piece.style.left = Math.random() * 100 + '%';
                piece.style.animationDelay = Math.random() * 4 + 's';
                piece.style.setProperty('--hue', Math.random() * 360);
                confettiContainer.appendChild(piece);
            }
            setTimeout(() => {
                confettiContainer.style.display = 'none';
                confettiContainer.innerHTML = '';
            }, 5000);
        }

        // Floating hearts
        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.textContent = '‚ù§Ô∏è';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDuration = (Math.random() * 10 + 10) + 's';
            document.getElementById('hearts').appendChild(heart);
            setTimeout(() => heart.remove(), 15000);
        }
        setInterval(createHeart, 3000);
    </script>
</body>
